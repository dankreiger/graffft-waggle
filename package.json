{
  "name": "graffft-waggle",
  "version": "0.0.2",
  "private": true,
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "workspaces": [
    "src/packages/**/*",
    "../src/packages/**/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna clean -y && yarn clean:pre-build && node scripts/build --all && yarn clean:post-build && yarn bootstrap",
    "build-app": "react-scripts build",
    "build-storybook": "build-storybook -s public",
    "clean": "lerna clean",
    "clean:post-build": "./scripts/clean_post_build.sh",
    "clean:pre-build": "./scripts/clean_pre_build.sh",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "eject": "react-scripts eject",
    "release": "standard-version && yarn build && yarn release:publish && yarn build-storybook && echo 'todo: add deploy script' ",
    "release:prerelease": "yarn build && yarn lerna publish --conventional-prerelease --pre-dist-tag next --yes",
    "release:publish": "yarn lerna publish --conventional-commits",
    "start": "react-scripts start",
    "storybook": "start-storybook -p 9009 -s public",
    "test": "find ./src/packages/**/**/lib -name \"__tests__\" -exec rm -rf {} + && react-scripts test --env=jsdom-fourteen",
    "test:coverage": "yarn test --coverage --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,jsx,json,css,md}": [
      "prettier --single-quote --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/packages/**/*.{ts,tsx}",
      "!src/packages/**/*.stories.{ts,tsx}",
      "!src/packages/**/story-*.{ts,tsx}",
      "!src/candidates/",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@rollup/plugin-commonjs": "13.0.2",
    "@rollup/plugin-node-resolve": "8.4.0",
    "@storybook/addon-a11y": "6.3.10",
    "@storybook/addon-actions": "6.3.10",
    "@storybook/addon-controls": "6.3.10",
    "@storybook/addon-docs": "6.3.10",
    "@storybook/addon-links": "6.3.10",
    "@storybook/addon-storysource": "6.3.10",
    "@storybook/addon-viewport": "6.3.10",
    "@storybook/addons": "6.3.10",
    "@storybook/preset-create-react-app": "3.2.0",
    "@storybook/react": "6.3.10",
    "@testing-library/cypress": "6.0.1",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "10.4.9",
    "@testing-library/user-event": "12.8.3",
    "@types/jest": "26.0.24",
    "@types/node": "14.0.27",
    "@types/react": "16.14.16",
    "@types/react-dom": "16.9.14",
    "@types/react-router-dom": "5.3.1",
    "@types/styled-components": "5.1.15",
    "babel-loader": "8.2.2",
    "cypress": "4.12.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "minimist": "1.2.5",
    "prettier": "2.4.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-router-dom": "5.3.0",
    "react-scripts": "3.4.4",
    "rollup": "2.58.0",
    "rollup-plugin-insert": "1.3.2",
    "rollup-plugin-size-snapshot": "0.12.0",
    "rollup-plugin-typescript2": "0.30.0",
    "standard-version": "9.3.1",
    "styled-components": "5.3.1",
    "ts-jest": "26.5.6",
    "typescript": "3.9.10"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1"
  }
}